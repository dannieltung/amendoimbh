<%= simple_form_for budget, remote: true  do |f| %>
  <div class="modal-header">
    <h5 class="modal-title">Or√ßamento</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="modal-body">
    <%= f.association :product, collection: Product.order('name ASC'), label: 'Produto' %>
    <%= f.input :quantity, label: 'Quantidade' %>
  </div>
  <div class="modal-footer">
    <%= f.submit "Criar", class: 'btn btn-success btn-block' %>
  </div>
<% end %>